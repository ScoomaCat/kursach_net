{% extends 'base.html.twig' %}

{% block title %}Edit user data{% endblock %}

{% block body %}
    <div class="container bg-white px-4 px-lg-5 py-5">
        <div class="mx-auto">
            <h1>My account: </h1>
            {{ form(form) }}
        </div>
        <div class="mx-auto">
            <h1>My appointments: </h1>

            <div class="row gx-4 gx-lg-5">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fa-solid fa-calendar-check text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">11.11.2011 17:00</h4>
                            <div class="">Master Diluc</div>
                            <div class="small text-black-50">Comment comment comment comment comment comment comment
                                comment comment comment comment comment comment comment comment
                            </div>
                            <hr class="my-4 mx-auto"/>
